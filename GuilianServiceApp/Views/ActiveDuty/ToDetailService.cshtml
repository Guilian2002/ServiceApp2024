@model GuilianServiceApp.Models.ActiveDuty

@if (!string.IsNullOrEmpty((string)TempData["Message"]))
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<h2 class="text-center">Details of Active Duty</h2>

<div class="text-center">
    <h4>Title: @Model.Title</h4>
    <p>Category: @Model.Category</p>
    <p>Description: @Model.Description</p>
    <p>Deadline: @Model.Deadline</p>
    <p>Credits Hours: @Model.CreditsHours</p>
    <p>Place : @Model.Requester.Address</p>
    <p>Requester: @Model.Requester.Username</p>
    <p>Provider: @Model.Provider.Username</p>
    @if (Model.Feedback != null)
    {
        <h3>Feedback:</h3>

        <div>
            <p>Rating: @Model.Feedback.Rating</p>
            <p>Comment: @Model.Feedback.Commentary</p>
        </div>
    }
    <br />
    <br />
    <a class="btn" style="border: 2px solid grey" asp-controller="User" asp-action="Main">Home</a>
</div>