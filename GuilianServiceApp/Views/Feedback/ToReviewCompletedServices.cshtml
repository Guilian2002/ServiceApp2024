@model GuilianServiceApp.ViewModels.AddFeedbackViewModel
@if (!string.IsNullOrEmpty((string)TempData["Message"]))
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<h1>Give feedback to a service</h1>
<br />
<form method="post" asp-controller="Feedback" asp-action="ToReviewCompletedServices">
    <table>
        <tr>
            <td><label asp-for="Commentary">Commentary :</label></td>
            <td><textarea asp-for="Commentary"></textarea></td>
            <td><span asp-validation-for="Commentary" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Rating">Rating :</label></td>
            <td>
                <select asp-for="Rating" asp-items="Html.GetEnumSelectList<GuilianServiceApp.Models.Rating>()">
                    <option>Please select</option>
                </select>
            </td>
            <td><span asp-validation-for="Rating" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><input type="submit" value="Next" /></td>
            <br />
            <br />
            <a class="btn" style="border: 2px solid grey" asp-controller="User" asp-action="Main">Home</a>
        </tr>
    </table>
</form>

